

<section class="catalogue">
    <%- include('partials/navbar'); %>
    <h2 class="text-center">All Brands</h2>
    <div class="categories px-4">
        <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

          <% if (categories != '') { %>
              <% categories.forEach(function(category, index) { %>
                  <a href="/category/<%= category.name %>" class="col text-center category__link">
                      <div class="category__image shadow">
                          <img src="img/<%= category.image %>" alt="<%= category.name %>" loading="lazy">
                      </div>
                      <div class="pt-1"><%= category.name %></div>
                  </a>
              <% }); %>
          <% } %>
        </div>

    </div>
  </section>